generator client {
  provider      = "prisma-client-js"
  output        = "../../node_modules/.prisma/client"
  binaryTargets = ["windows", "darwin"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   @default("cashier")
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String
  parentId  Int?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  parent    Category?  @relation("CategoryToChildren", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryToChildren")

  @@unique([name, parentId])
}

model Product {
  id                     Int             @id @default(autoincrement())
  name                   String
  barcode                String?         @unique
  category               String?
  batchTrackingEnabled   Boolean         @default(false)
  lowStockThreshold      Int             @default(0)
  lowStockWarningEnabled Boolean         @default(false)
  createdAt              DateTime        @default(now())
  batches                Batch[]
  promotions             PromotionItem[]
  movements              StockMovement[]
}

model Batch {
  id               Int             @id @default(autoincrement())
  productId        Int
  batchCode        String?
  quantity         Int             @default(0)
  mrp              Float
  costPrice        Float
  sellingPrice     Float
  wholesaleEnabled Boolean         @default(false)
  wholesalePrice   Float?
  wholesaleMinQty  Int?
  expiryDate       DateTime?
  createdAt        DateTime        @default(now())
  product          Product         @relation(fields: [productId], references: [id])
  saleItems        SaleItem[]
  movements        StockMovement[]
}

model Sale {
  id            Int        @id @default(autoincrement())
  totalAmount   Float
  discount      Float      @default(0)
  extraDiscount Float      @default(0)
  paymentMethod String     @default("Cash")
  createdAt     DateTime   @default(now())
  items         SaleItem[]
}

model SaleItem {
  id               Int     @id @default(autoincrement())
  saleId           Int
  batchId          Int
  quantity         Int
  returnedQuantity Int     @default(0)
  sellingPrice     Float
  costPrice        Float
  mrp              Float
  isWholesale      Boolean @default(false)
  batch            Batch   @relation(fields: [batchId], references: [id])
  sale             Sale    @relation(fields: [saleId], references: [id])
}

model StockMovement {
  id        Int      @id @default(autoincrement())
  productId Int
  batchId   Int?
  type      String
  quantity  Int
  note      String?
  createdAt DateTime @default(now())
  batch     Batch?   @relation(fields: [batchId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}

model LooseSale {
  id        Int      @id @default(autoincrement())
  itemName  String?
  price     Float
  createdAt DateTime @default(now())
}

model Promotion {
  id        Int             @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean         @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  items     PromotionItem[]
}

model PromotionItem {
  id                 Int       @id @default(autoincrement())
  promotionId        Int
  productId          Int
  promoPrice         Float
  discountPercentage Float?
  createdAt          DateTime  @default(now())
  product            Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  promotion          Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
}

model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}
